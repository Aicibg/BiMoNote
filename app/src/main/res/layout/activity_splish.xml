<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:test="http://schemas.android.com/apk/res/com.hao.bimonote"
    android:id="@+id/activity_splish"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splash"
    android:gravity="center"
    tools:context="com.hao.bimonote.ui.activity.SplashActivity">

    <com.hao.bimonote.widget.WindmillView
        android:id="@+id/windmill_one"
        test:windmillColor="@android:color/holo_green_light"
        android:layout_gravity="top"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <com.hao.bimonote.widget.WindmillView
        test:windmillColor="@android:color/holo_orange_light"
        android:id="@+id/windmill_two"
        android:layout_gravity="top|right"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="80dp"
        android:layout_height="80dp"/>


    <TextView
        android:id="@+id/tv_title_top"
        android:text="@string/app_title"
        android:layout_marginBottom="60dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textColor="@color/color_black"
        android:textSize="@dimen/app_title_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="invisible"
        android:id="@+id/tv_title_bottom"
        android:text="笔记"
        android:layout_marginBottom="60dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="48dp"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bt_start_open"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="32dp"
        android:text="点击进入"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</FrameLayout>
